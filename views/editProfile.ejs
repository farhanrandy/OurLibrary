<head>
  <title>Edit Profile</title>
  <link rel="stylesheet" href="/styles/edit-profile.css">
</head>
<h2>Edit Profile</h2>

<form action="/profiles/edit/<%= User.id %>" method="POST">
  <!-- Name -->
  <div>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= User.name %>" required />
  </div>

  <!-- Email -->
  <div>
    <label for="email">Email:</label>
    <input type="email" name="email" id="email" value="<%= User.email %>" required />
  </div>

  <!-- Address -->
  <div>
    <label for="address">Address:</label>
    <input type="text" name="address" id="address" value="<%= Profile.address %>" required />
  </div>

  <!-- Phone -->
  <div>
    <label for="phone">Phone:</label>
    <input type="text" name="phone" id="phone" value="<%= Profile.phone %>" required />
  </div>

  <button type="submit">Save Changes</button>
</form>